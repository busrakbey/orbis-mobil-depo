<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#CACACA" android:endColor="#B4A799" android:angle="-90" />
            <corners android:radius="20dip" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#006064" />
            <solid android:color="#58857e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#5B777A" />
            <gradient android:angle="-90" android:startColor="#006064" android:endColor="#B2DFDB" />
        </shape>
    </item>
</selector>