<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout_ozm_hb_sorgula_list_ui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/gp_oa_ui_rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@color/mr_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            />



        <View android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/shadow"/>


        <include
            layout="@layout/include_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/yil_sorgu_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">







        </LinearLayout>










        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">



                <Button
                    android:id="@+id/oduh_temizle_button"
                    style="@style/mr_fe_in_button_linee"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/edittext_height"
                    android:background="@drawable/yeni_buton"
                    android:drawableLeft="@android:drawable/ic_menu_delete"
                    android:gravity="center"
                    android:text=" T E M İ Z L E "
                    android:textColor="@color/bembeyaz"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/oduh_sorgula_button"
                    style="@style/mr_fe_in_button_linee"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/edittext_height"
                    android:background="@drawable/yeni_buton"
                    android:drawableLeft="@android:drawable/ic_menu_search"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text=" S O R G U L A "
                    android:textColor="@color/bembeyaz"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:id="@+id/birinci_baslik"
            style="@style/listTable_satircontainerLinearwrapwraphoriz"
            >

            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Dikili"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>

            <TextView
                style="@style/listTable_SatirTextView"
                android:layout_weight="1.2"
                android:text="Dikili Program"
                android:textColor="@color/text"
                android:textSize="@dimen/smaller_textsize" />

            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1.6"
                android:textSize="@dimen/smaller_textsize"
                android:text="Üretime \n Verilen"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="0.9"
                android:textSize="@dimen/smaller_textsize"
                android:text="Toplam \n Program"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Toplam"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>





        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:id="@+id/ikinci_baslik"
            style="@style/listTable_satircontainerLinearwrapwraphoriz"
            >

            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Ürün \nAdı"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>

            <TextView
                style="@style/listTable_SatirTextView"
                android:layout_weight="1.2"
                android:text="Program"
                android:textColor="@color/text"
                android:textSize="@dimen/smaller_textsize" />

            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1.6"
                android:textSize="@dimen/smaller_textsize"
                android:text="Kesme Miktar"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="0.9"
                android:textSize="@dimen/smaller_textsize"
                android:text="Kesme Tutar"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Sür. Miktar"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>

            <TextView
                style="@style/listTable_SatirTextView"
                android:layout_weight="1.2"
                android:text="Sür. Tutar"
                android:textColor="@color/text"
                android:textSize="@dimen/smaller_textsize" />

            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1.6"
                android:textSize="@dimen/smaller_textsize"
                android:text="Taşıma Mik."
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="0.9"
                android:textSize="@dimen/smaller_textsize"
                android:text="Taşıma Tutar"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Yük. Miktar"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                style="@style/listTable_SatirTextView"
                android:layout_weight="1.2"
                android:text="Yük. Tutar"
                android:textColor="@color/text"
                android:textSize="@dimen/smaller_textsize" />

            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1.6"
                android:textSize="@dimen/smaller_textsize"
                android:text="İstif Miktar"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="0.9"
                android:textSize="@dimen/smaller_textsize"
                android:text="İstif Tutar"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:id="@+id/ucuncu_baslik"
            style="@style/listTable_satircontainerLinearwrapwraphoriz"
            >

            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Ürün \nAdı"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>

            <TextView
                style="@style/listTable_SatirTextView"
                android:layout_weight="1.2"
                android:text="Tahsisli Miktar"
                android:textColor="@color/text"
                android:textSize="@dimen/smaller_textsize" />

            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1.6"
                android:textSize="@dimen/smaller_textsize"
                android:text="Tahsisli Tutar"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="0.9"
                android:textSize="@dimen/smaller_textsize"
                android:text="Açık Art. Miktar"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Açık Art. Tutar"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>

            <TextView
                style="@style/listTable_SatirTextView"
                android:layout_weight="1.2"
                android:text="Kps Miktar"
                android:textColor="@color/text"
                android:textSize="@dimen/smaller_textsize" />

            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1.6"
                android:textSize="@dimen/smaller_textsize"
                android:text="Kps Tutar"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="0.9"
                android:textSize="@dimen/smaller_textsize"
                android:text="Prog. Miktar"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Prog. Tutar"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />





        </LinearLayout>



        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:id="@+id/dorduncu_baslik"
            style="@style/listTable_satircontainerLinearwrapwraphoriz"
            >

            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Ürün Adı"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>

            <TextView
                style="@style/listTable_SatirTextView"
                android:layout_weight="1.2"
                android:text="Gerçekleşen \nMiktar"
                android:textColor="@color/text"
                android:textSize="@dimen/smaller_textsize" />

            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1.6"
                android:textSize="@dimen/smaller_textsize"
                android:text="Program \nMiktar"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />



        </LinearLayout>


        <ListView
            android:id="@+id/oduh_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:animationCache="false"
            android:background="@drawable/ip_dd_listitem_bg"
            android:scrollingCache="true"
            android:smoothScrollbar="true"
            android:stackFromBottom="false">

        </ListView>


        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chart1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/seekBar1"
            android:layout_marginTop="40dp" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_above="@+id/seekBar1" />

        </LinearLayout>



</android.support.v4.widget.DrawerLayout>
