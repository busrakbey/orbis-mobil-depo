<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout_ozm_hb_sorgula_list_ui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/gp_oa_ui_rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:background="@color/mr_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            />



        <View android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/shadow"/>


        <LinearLayout
            android:id="@+id/yil_sorgu_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">


            <include
                layout="@layout/include_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>










        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">



                <Button
                    android:id="@+id/oduh_temizle_button"
                    style="@style/mr_fe_in_button_linee"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/edittext_height"
                    android:background="@drawable/yeni_buton"
                    android:drawableLeft="@android:drawable/ic_menu_delete"
                    android:gravity="center"
                    android:text=" T E M İ Z L E "
                    android:textColor="@color/bembeyaz"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/oduh_sorgula_button"
                    style="@style/mr_fe_in_button_linee"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/edittext_height"
                    android:background="@drawable/yeni_buton"
                    android:drawableLeft="@android:drawable/ic_menu_search"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text=" S O R G U L A "
                    android:textColor="@color/bembeyaz"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:id="@+id/birinci_baslik"
            style="@style/listTable_satircontainerLinearwrapwraphoriz"
            >
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Bölge"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>

            <TextView
                style="@style/listTable_SatirTextView"
                android:layout_weight="1.2"
                android:text="İşletme"
                android:textColor="@color/text"
                android:textSize="@dimen/smaller_textsize" />

            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1.6"
                android:textSize="@dimen/smaller_textsize"
                android:text="Şeflik"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="0.9"
                android:textSize="@dimen/smaller_textsize"
                android:text="Ağaç Türü"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Cetel Türü"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>

            <TextView
                android:layout_weight="0.9"
                android:textSize="@dimen/smaller_textsize"
                android:text="Miktar"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Orijin"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>



        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:id="@+id/ikinci_baslik"
            style="@style/listTable_satircontainerLinearwrapwraphoriz"
            >

            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Bölge"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>

            <TextView
                style="@style/listTable_SatirTextView"
                android:layout_weight="1.2"
                android:text="İşletme"
                android:textColor="@color/text"
                android:textSize="@dimen/smaller_textsize" />

            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1.6"
                android:textSize="@dimen/smaller_textsize"
                android:text="Şeflik"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="0.9"
                android:textSize="@dimen/smaller_textsize"
                android:text="Planlanan Hibe"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Planlanan Kredi"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>




            <TextView
                android:layout_weight="1.6"
                android:textSize="@dimen/smaller_textsize"
                android:text="Planlanan Toplam"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="0.9"
                android:textSize="@dimen/smaller_textsize"
                android:text="Gerçekleşen Adet"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Gerçekleşen Toplam"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>




        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:id="@+id/ucuncu_baslik"
            style="@style/listTable_satircontainerLinearwrapwraphoriz"
            >

            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Bölge"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>

            <TextView
                style="@style/listTable_SatirTextView"
                android:layout_weight="1.2"
                android:text="İşletme"
                android:textColor="@color/text"
                android:textSize="@dimen/smaller_textsize" />

            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1.6"
                android:textSize="@dimen/smaller_textsize"
                android:text="Şeflik"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="0.9"
                android:textSize="@dimen/smaller_textsize"
                android:text="Tarih"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Ziraat\nYangını"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>



            <TextView
                android:layout_weight="1.6"
                android:textSize="@dimen/smaller_textsize"
                android:text="Milli Park \nYangını"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="0.9"
                android:textSize="@dimen/smaller_textsize"
                android:text="Orman Yangını"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>
            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Toplam Yangın"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />
            <View
                style="@style/listTable_satirAyracView"></View>

            <TextView
                android:layout_weight="1"
                android:textSize="@dimen/smaller_textsize"
                android:text="Toplam Yanan Alan"
                android:textColor="@color/text"
                style="@style/listTable_SatirTextView"
                />

        </LinearLayout>


        <ListView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:animationCache="false"
            android:scrollingCache="true"
            android:smoothScrollbar="true"
            android:stackFromBottom="false"
            android:background="@drawable/ip_dd_listitem_bg"
            android:id="@+id/oduh_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>



    </LinearLayout>



</android.support.v4.widget.DrawerLayout>
